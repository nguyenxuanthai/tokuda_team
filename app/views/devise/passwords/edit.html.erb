<div class="forgot">
  <div class="forgot-classic">
    <h1>Change your password</h1>
    <div class = "form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>

      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <fieldset class="password">
        <%= f.password_field :password, placeholder: "New Password", autocomplete: "off", autofocus: true %>
      </fieldset>

      <fieldset class="password">
        <%= f.password_field :password_confirmation, placeholder: "Confirm new password", autocomplete: "off" %>
      </fieldset>

      <div class="actions">
        <%= f.submit "Change my password", id: "button-submit" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
