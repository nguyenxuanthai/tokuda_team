
<div class="confirmation">
  <div class="confirmation-classic">
    <h1>Resend confirmation instructions</h1>
    <div class = "form">
      <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset class="email">
        <%= f.email_field :email,placeholder: "email", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
      </fieldset>

      <div class="actions">
        <%= f.submit "Resend confirmation instructions", id: "button-submit" %>
      </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
